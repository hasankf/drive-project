<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@4.0.1/dist/flowbite.min.css"
      rel="stylesheet"
    />
  </head>

  <body
    class="bg-gray-100 dark:bg-gray-800 h-screen w-screen flex items-center justify-center text-white"
  >
    <form
    action="/user/register"
    method="post"
     
    class="w-96">
      <div>
        <label
          for="username"
          class="block mb-2.5 text-sm font-medium text-white"
          >Username</label
        >
        <input
          type="text"
          id="username"
          class="bg-neutral-secondary-medium border border-default-medium text-white text-sm rounded-base focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2.5 shadow-xs placeholder:text-body"
          placeholder="John"
          name="username"
          required
        />
      </div>

      <!-- PASSWORD (replaced company) -->
      <div class="mb-6">
        <label
          for="password"
          class="block mb-2.5 text-sm font-medium text-white"
          >Password</label
        >
        <input
          type="password"
          id="password"
          class="bg-neutral-secondary-medium border border-default-medium text-white text-sm rounded-base focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2.5 shadow-xs placeholder:text-body"
          placeholder="•••••••••"
          required
          name="password"
        />
      </div>

      <div class="mb-6">
        <label for="email" class="block mb-2.5 text-sm font-medium text-white"
          >Email address</label
        >
        <input
          type="email"
          id="email"
          class="bg-neutral-secondary-medium border border-default-medium text-white text-sm rounded-base focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2.5 shadow-xs placeholder:text-body"
          placeholder="john.doe@company.com"
          required
          name="email"
        />
      </div>

      <button
        type="submit"
        class="text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 shadow-xs font-medium rounded-base text-sm px-4 py-2.5 focus:outline-none"
      >
        Submit
      </button>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@4.0.1/dist/flowbite.min.js"></script>
  </body>
</html>
